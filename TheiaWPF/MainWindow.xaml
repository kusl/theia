<Window x:Class="TheiaWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheiaWPF"
        mc:Ignorable="d"
        Title="Main Window" Height="768" Width="1366">
    <Grid>
        <StackPanel Width="auto" Height="50" Background="RosyBrown" VerticalAlignment="Top"  Orientation="Vertical">
            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                <TextBlock Width="100" Height="50" HorizontalAlignment="Left">LOGO</TextBlock>
                <TextBox Width="400" Height="50" HorizontalAlignment="Left">Search</TextBox>
                <Button Width="50" Height="50" HorizontalAlignment="Left">🔍</Button>
                <TextBlock Width="50" Height="50" HorizontalAlignment="Right">Account</TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
